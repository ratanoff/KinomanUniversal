<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1d2226"
        android:orientation="vertical"
        tools:context=".view.main.TopFragment">

    <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="202dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/trailer_bg"
            android:layout_width="match_parent"
            android:layout_height="202dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:background="#b66758"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video_view"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/poster_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="4dp"
            android:elevation="10dp" android:layout_marginTop="186dp"
            app:layout_constraintTop_toTopOf="@+id/trailer_bg">

        <ImageView
                android:id="@+id/poster"
                android:layout_height="wrap_content"
                android:layout_width="96dp"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/poster"/>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>